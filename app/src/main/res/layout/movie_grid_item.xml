<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="180dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/name"
        android:background="@color/movie_title_background_color"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="48dp"
        android:paddingLeft="@dimen/movie_title_padding_horizintal"
        android:paddingRight="@dimen/movie_title_padding_horizintal"
        android:paddingTop="@dimen/movie_title_padding_vertical"
        android:paddingBottom="@dimen/movie_title_padding_vertical"
        android:maxLines="2"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>